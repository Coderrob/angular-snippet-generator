{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ES2022"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  },
  "exclude": ["node_modules", ".vscode-test"],
  "include": ["src/**/*.ts"]
}
