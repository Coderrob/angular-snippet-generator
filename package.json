{
  "author": "Rob Lindley",
  "license": "Apache-2.0",
  "name": "angular-snippet-generator",
  "displayName": "Angular Snippet Generator",
  "icon": "public/img/angular-snippet-generator-icon.png",
  "description": "A Visual Studio Code extension to generate Angular code snippets.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/Coderrob/angular-snippet-generator.git"
  },
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "angular-snippet-generator.createSnippets",
        "title": "Create Angular Snippets"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "angular-snippet-generator.createSnippets",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Angular Snippet Generator",
      "properties": {
        "angularSnippetGenerator.snippetLocation": {
          "type": "string",
          "default": "workspace",
          "enum": [
            "workspace",
            "user",
            "ask"
          ],
          "enumDescriptions": [
            "Save snippets to .vscode folder in the workspace (recommended for team projects)",
            "Save snippets to your global VS Code user snippets folder",
            "Ask where to save each time snippets are generated"
          ],
          "description": "Where to save the generated Angular snippets."
        }
      }
    }
  },
  "keywords": [
    "vscode",
    "angular",
    "code",
    "snippets",
    "angular",
    "snippets"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "ext:build": "npm run compile",
    "ext:package": "npx @vscode/vsce package",
    "ext:install": "node -e \"const fs=require('fs');const {execSync}=require('child_process');const files=fs.readdirSync('.').filter(f=>f.endsWith('.vsix'));if(!files.length){console.error('No .vsix found. Run: npm run ext:package');process.exit(1);}const latest=files.sort((a,b)=>fs.statSync(b).mtimeMs-fs.statSync(a).mtimeMs)[0];console.log('Installing', latest);execSync('code --install-extension '+latest,{stdio:'inherit'});\"",
    "ext:reinstall": "npm run ext:package && npm run ext:install",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "npm run lint:eslint && npm run lint:cpd",
    "lint:eslint": "eslint src",
    "lint:fix": "eslint src --fix",
    "lint:cpd": "jscpd src",
    "lint:md": "markdownlint README.md --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "test": "node ./out/test/runTest.js",
    "test:unit": "node ./out/test/runCoverage.js",
    "coverage": "c8 node ./out/test/runCoverage.js",
    "coverage:check": "c8 check-coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.x",
    "@types/vscode": "^1.76.0",
    "@vscode/test-electron": "^2.2.3",
    "c8": "^10.1.3",
    "chai": "^4.3.7",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsdoc": "^50.0.0",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^10.0.0",
    "jscpd": "^4.0.5",
    "mocha": "^10.2.0",
    "prettier": "^3.7.4",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
