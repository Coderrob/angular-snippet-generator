{
  "activationEvents": [
    "onStartupFinished"
  ],
  "author": "Rob Lindley",
  "categories": [
    "Snippets"
  ],
  "contributes": {
    "commands": [
      {
        "command": "angular-snippet-generator.createSnippets",
        "title": "Create Angular Snippets"
      }
    ],
    "configuration": {
      "properties": {
        "angularSnippetGenerator.snippetLocation": {
          "default": "workspace",
          "description": "Where to save the generated Angular snippets.",
          "enum": [
            "workspace",
            "user",
            "ask"
          ],
          "enumDescriptions": [
            "Save snippets to .vscode folder in the workspace (recommended for team projects)",
            "Save snippets to your global VS Code user snippets folder",
            "Ask where to save each time snippets are generated"
          ],
          "type": "string"
        }
      },
      "title": "Angular Snippet Generator"
    },
    "menus": {
      "codeSnippets": [
        {
          "command": "angular-snippet-generator.createSnippets",
          "when": "explorerResourceIsFolder"
        }
      ],
      "explorer/context": [
        {
          "group": "z_commands",
          "submenu": "codeSnippets",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "submenus": [
      {
        "id": "codeSnippets",
        "label": "Code Snippets"
      }
    ]
  },
  "description": "A Visual Studio Code extension to generate Angular code snippets.",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.x",
    "@types/vscode": "^1.76.0",
    "@vscode/test-electron": "^2.2.3",
    "c8": "^10.1.3",
    "chai": "^4.3.7",
    "dependency-cruiser": "^16.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsdoc": "^50.0.0",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^10.0.0",
    "jscpd": "^4.0.5",
    "make-coverage-badge": "^1.2.0",
    "mocha": "^10.2.0",
    "prettier": "^3.7.4",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "displayName": "Angular Snippet Generator",
  "engines": {
    "vscode": "^1.76.0"
  },
  "icon": "public/img/angular-snippet-generator-icon.png",
  "keywords": [
    "angular",
    "code-snippets",
    "extension",
    "vscode"
  ],
  "license": "Apache-2.0",
  "main": "./dist/extension.js",
  "name": "angular-snippet-generator",
  "publisher": "coderrob",
  "repository": {
    "type": "git",
    "url": "https://github.com/Coderrob/angular-snippet-generator.git"
  },
  "scripts": {
    "compile": "webpack",
    "compile-tests": "tsc -p . --outDir dist",
    "coverage": "c8 node ./dist/test/runCoverage.js",
    "coverage:badge": "make-coverage-badge --output-path ./coverage-badge.json",
    "coverage:check": "c8 check-coverage",
    "ext:build": "npm run compile",
    "ext:install": "node scripts/install-extension.cjs",
    "ext:package": "npx @vscode/vsce package",
    "ext:reinstall": "npm run ext:package && npm run ext:install",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "lint": "npm run lint:eslint && npm run lint:cpd && npm run lint:deps",
    "lint:cpd": "jscpd src",
    "lint:deps": "depcruise src --config .dependency-cruiser.cjs",
    "lint:eslint": "eslint src",
    "lint:fix": "eslint src --fix",
    "lint:md": "markdownlint README.md --fix",
    "package": "webpack --mode production --devtool hidden-source-map",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "quality": "npm run lint && npm run format:check",
    "test": "node ./dist/test/runTest.js",
    "test:unit": "node ./dist/test/runCoverage.js",
    "typecheck": "tsc --noEmit",
    "validate-package": "node -e \"JSON.parse(require('fs').readFileSync('package.json', 'utf8')); console.log('package.json is valid JSON')\""
  },
  "version": "0.0.1"
}
